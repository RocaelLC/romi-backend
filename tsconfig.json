{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2023",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "useDefineForClassFields": false
  }
}
